{
  "expo": {
    "name": "SnackSage",
    "slug": "SnackSage",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./app/assets/images/icon.png",
    "scheme": "snacksage",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "permissions": [
      "RECORD_AUDIO"
    ],
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSMicrophoneUsageDescription": "This app needs access to microphone to record voice messages",
        "NSSpeechRecognitionUsageDescription": "This app needs access to speech recognition to convert voice to text"
      }
    },
    "android": {
      "permissions": [
        "RECORD_AUDIO",
        "android.permission.RECORD_AUDIO"
      ],
      "adaptiveIcon": {
        "foregroundImage": "./app/assets/images/icon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "package": "com.sahilmurhekar.SnackSage"
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./app/assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./app/assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff"
        }
      ],
      "expo-secure-store"
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {},
      "eas": {
        "projectId": "46f18aef-891c-4b9c-9ef4-4b2c8e567d39"
      }
    },
    "owner": "sahilmurhekar",
    "runtimeVersion": {
      "policy": "appVersion"
    },
    "updates": {
      "url": "https://u.expo.dev/46f18aef-891c-4b9c-9ef4-4b2c8e567d39"
    }
  }
}
